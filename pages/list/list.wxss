@import "../../templates/common-list.wxss";
.list-container {
  background-color: transparent;
}
.banner {
  position: relative;
  height: 375rpx;
}
.banner image {
  display: block;
  width: 100%;
  height: 100%;
}
.banner .banner-title {
  position: absolute;
  top: 56rpx;
  left: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: center;
  color: #fff;
  font-size: 48rpx;
  border-bottom: 2rpx solid #fff;
}
.banner .banner-desc {
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  top: 170rpx;
  bottom: 20rpx;
  color: #fff;
  font-size: 34rpx;
}
