.index-header {
  text-align: center;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #ff0000;
}
.index-header .index-swiper {
  position: relative;
  height: 420rpx;
}
.index-header .index-swiper image {
  display: block;
  width: 100%;
  height: 100%;
}
.index-header .index-swiper .swiper-desc {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(63, 76, 88, 0.3) 100%);
  color: #fff;
  line-height: 50rpx;
  margin: 0 auto;
  font-weight: 700;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 30rpx;
  text-shadow: 0px 0px 16px #646d75;
}
