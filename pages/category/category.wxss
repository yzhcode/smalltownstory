.category-common-list {
  padding: 48rpx 48rpx 48rpx 48rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.category-common-list .list-item {
  width: 303rpx;
  margin-bottom: 96rpx;
}
.category-common-list .list-item .list-item-image {
  width: 303rpx;
  height: 303rpx;
  border-radius: 12rpx;
}
.category-common-list .list-item .list-item-category {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.category-common-list .list-item .list-item-category .category-title {
  font-size: 30rpx;
  color: #1b1b1b;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.category-common-list .list-item .list-item-category .category-title text {
  vertical-align: center;
  line-height: 40rpx;
}
.category-common-list .list-item .list-item-category .category-image {
  width: 80rpx;
  height: 100%;
  border-radius: 12rpx;
}
.category-common-list .list-item .list-item-desc {
  position: relative;
  padding: 0rpx;
  font-size: 28rpx;
  line-height: 30rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #959595;
}
